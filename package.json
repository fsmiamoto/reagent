{
  "name": "@fsmiamoto/reagent",
  "version": "0.0.14",
  "description": "Reagent: MCP server for local code reviews with GitHub-style UI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "reagent": "./dist/index.js"
  },
  "workspaces": [
    "ui"
  ],
  "scripts": {
    "build": "npm run build:server && npm run build:ui",
    "build:server": "npm run typecheck && node esbuild.config.mjs",
    "build:ui": "cd ui && npm run build",
    "typecheck": "tsc --noEmit",
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "inspector": "npx @modelcontextprotocol/inspector",
    "test": "vitest run && npm run test:ui",
    "test:ui": "cd ui && npm run test",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:all": "npm run test && npm run test:e2e",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "preversion": "npm test",
    "bump:patch": "npm version patch --message \"chore(release): %s\"",
    "bump:minor": "npm version minor --message \"chore(release): %s\"",
    "bump:major": "npm version major --message \"chore(release): %s\""
  },
  "keywords": [
    "mcp",
    "code-review",
    "developer-tools"
  ],
  "author": "Flavio Miyamoto",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "express": "^4.18.2",
    "open": "^10.0.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.2",
    "@types/cors": "^2.8.17",
    "@types/diff": "^5.0.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^4.0.10",
    "esbuild": "^0.27.2",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.10"
  },
  "files": [
    "dist",
    "ui/dist",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
