{
  "name": "@fsmiamoto/reagent",
  "version": "0.0.1",
  "description": "Reagent: MCP server for local code reviews with GitHub-style UI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "reagent": "./dist/index.js"
  },
  "workspaces": [
    "ui"
  ],
  "scripts": {
    "build": "tsc && cd ui && npm run build",
    "build:server": "tsc",
    "build:ui": "cd ui && npm run build",
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "inspector": "npx @modelcontextprotocol/inspector"
  },
  "keywords": [
    "mcp",
    "code-review",
    "developer-tools"
  ],
  "author": "Flavio Miyamoto",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "cors": "^2.8.5",
    "diff": "^5.1.0",
    "express": "^4.18.2",
    "open": "^10.0.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.2",
    "@types/cors": "^2.8.17",
    "@types/diff": "^5.0.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
